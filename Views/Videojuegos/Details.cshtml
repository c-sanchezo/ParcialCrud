@model ParcialCelesteCrud.Models.Videojuegos

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f5f8fb;">
    <div class="card shadow-sm" style="max-width: 600px; width: 100%; padding: 30px; border-radius: 10px; background-color: #ffffff;">
        <h2 class="text-primary text-center mb-4">Detalles del Videojuego</h2>
        <hr class="mb-4" style="border-top: 2px solid #007bff;" />

        <div>
            <h4 class="text-center">Información del Videojuego</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-4 text-end">
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <dt class="col-sm-4 text-end">
                    @Html.DisplayNameFor(model => model.precio)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.precio)
                </dd>

                <dt class="col-sm-4 text-end">
                    @Html.DisplayNameFor(model => model.stock)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.stock)
                </dd>

                <dt class="col-sm-4 text-end">
                    @Html.DisplayNameFor(model => model.fecha_lanzamiento)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.fecha_lanzamiento)
                </dd>

                <dt class="col-sm-4 text-end">
                    @Html.DisplayNameFor(model => model.CategoriaId)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CategoriaId)
                </dd>
            </dl>
        </div>

        <div class="form-actions text-center">
            @Html.ActionLink("Editar", "Edit", new { id = Model.VideojuegoId }, new { @class = "btn btn-primary px-4 py-2 mb-2" })
            <span class="mx-2">|</span>
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary px-4 py-2 mb-2" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f8fb;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-weight: bold;
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s, border-color 0.3s;
        border-radius: 25px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-outline-secondary {
        background-color: transparent;
        border-color: #6c757d;
        color: #6c757d;
        transition: background-color 0.3s;
        border-radius: 25px;
    }

        .btn-outline-secondary:hover {
            background-color: #e2e6ea;
            color: #495057;
        }

    .card {
        border-radius: 10px;
    }

    .d-flex {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .dl-horizontal dt {
        text-align: right;
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
    }

    .text-end {
        text-align: end;
    }

    .form-actions {
        margin-top: 20px;
    }
</style>
